{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a href="{{ 'src/Controller/ORMController.php'|file_link(0) }}">src/Controller/ORMController.php</a></code></li>
        </ul>
    </div>

    Artists: {{ artists | length }}

    <table>
        {% for artist in artists %}
            <tr><td>{{ artist.slug }}</td><td><a href="{{ path('orm', parameters = [], relative =  false) }}">{{ artist.name }}</a></td></tr>
        {% endfor %}
    </table>
{% endblock %}