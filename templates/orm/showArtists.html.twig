{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block menuCss %}
    {{ parent() }}

    #addartist {visibility: visible}
{% endblock %}


{% block menuJ %}

{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h3 class="addHeader">Artists...</h3>

    Artists: {{ artists | length }}


    <div class="row">
        <div class="col-md-6"><a href="{{ path('showAllArtists') }}"><-- Artists</a> </div>
        <div class="col-md-6"><a href="{{ path('addArtist') }}">Add Artist --></a></div>
    </div>

    <table>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td><a href="{{ path('artistAlbums', {'artistId':artist.id  , 'artistName':artist.name}, relative =  false) }}">{{ artist.name }}</a></td>
            </tr>
        {% endfor %}
    </table>

    {#test: {{ artists[1].name }}#}

{% endblock %}